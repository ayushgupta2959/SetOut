<%- include('../partials/header') -%>

<div class="container">
  <h1 style="text-align: center;">Create a new POST</h1>
  <div style="width: 30%; margin: 20px auto;">
    <form class="mb-2" action="/posts" method="POST">
      <div class="form-group">
        <label for="textname">Title</label>
        <input type="text" class="form-control" id="textname" name="title">
      </div>
      <div class="form-group">
        <label for="textimageurl">Image-URL</label>
        <input type="text" class="form-control" id="textimageurl" name="image">
      </div>
      <div class="form-group">
        <label for="textdescription">Description</label>
        <input type="text" class="form-control" id="textdescription" name="description">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </div>
    </form>
    <a class="pl-0 btn" href="/posts">GO BACK to POSTS</a>
  </div>
</div>

<%- include('../partials/footer') -%>